    "version": "0.2.0",
    "configurations": [
        {
            "name": "Device",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "start.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0",

                "DEVICE_ID": "sat1",
                "EXTERNAL_PORT": "5000",
                "INTERNAL_PORT": "5000",
                "SIMULATE_HARDWARE": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}